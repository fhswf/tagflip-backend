{
  "tslint.autoFixOnSave": true,
  "extends": "tslint:recommended",
  "rules": {
    "align": [
      true,
      "parameters"
    ],
    "quotemark": [
      false
    ],
    "no-console": false,
    "ordered-imports": [
      true
    ],
    "object-literal-sort-keys": [
      true
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}